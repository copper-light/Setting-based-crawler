{
	"name": "naver_category",
	"arguments": {
		"get_type": "db",
		"file_path": "D:\\Downloads\\crawler\\euc-kr_sample.csv",
		"query": "select KEYWORD from KEYWORD"
	},
	"db_id": "root",
	"db_pw": "sairport2018",
	"db_path": "jdbc:mariadb://localhost:3306/DEV_CRAWLER_LOG",
	"seed": {
		"url": "https://search.shopping.naver.com/search/all.nhn?&cat_id=&frm=NVSHATC&pagingSize=80",
		"type": "GET",
		"data": [
			{
				"key": "query",
				"value": "<%0%>"
			}
		]
	},
	"ignore_robots": true,
	"crawling_max_depth": -1,
	"crawling_type": "SCENARIO_DYNAMIC",
	"crawling_delay": 0.66,
	"crawling_max_count": 9000,
	"contents_save_type": "DB",
	"save_html": false,
	"output_file_path": "",
	"charset": "UTF-8",
	"selenium_driver_name": "phantomjs",
	"selenium_headless": false,
	"scenario": [
		{
			"depth": 0,
			"action": [
				{
					"type": "parse_contents",
					"selector": ".goods_list"
				},
				{
					"type" : "remove_elements",
					"selector" : ".goods_list",
					"value" : ".goods_list"
				},
				{
					"type": "click",
					"selector": "#_result_paging > a.next",
					"target_depth": 0
				}
			]
		}
	],
	"collect_recode": [
		{
			"depth": 0,
			"name": "data",
			"recode_selector": "li._itemSection",
			"column": [
				{
					"type": "text",
					"data_type": "varchar(300)",
					"data_name": "keyword",
					"value": "<%0%>"
				},
				{
					"data_type": "varchar(200)",
					"data_name": "category",
					"allow_null" : true,
					"element": [
						{
							"from_root": false,
							"selector": "span.depth > a",
							"type": "text"
						}
					]
				},
				{
					"data_type": "varchar(200)",
					"data_name": "goods_name",
					"regex_filter": [],
					"element": [
						{
							"from_root": false,
							"selector": "a.tit",
							"type": "text"
						}
					]
				},
				{
					"data_type": "varchar(20)",
					"data_name": "goods_id",
					"key": true,
					"element": [
						{
							"from_root": false,
							"selector": "a.jjim",
							"type": "attr=data-nv-mid"
						}
					]
				}
			]
		}
	],
	"post_processing": {
		"query": [
			"CREATE TABLE IF NOT EXISTS RESULT (KEYWORD VARCHAR(30), MAX_CNT INT, TOTAL_COUNT INT, CATEGORY VARCHAR(100))",
			"DELETE FROM RESULT",
			"INSERT INTO RESULT (KEYWORD, MAX_CNT, TOTAL_COUNT, CATEGORY) SELECT KEYWORD, MAX(A.CNT) as MAX_CNT, SUM(A.CNT) as CNT, A.category FROM (SELECT KEYWORD, COUNT(*) AS CNT, CATEGORY FROM 'DATA' GROUP BY KEYWORD, CATEGORY HAVING CATEGORY IS NOT NULL ) AS A GROUP BY KEYWORD"
		]
	}
}